{
    "compilerOptions": {
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "jsx": "preserve",
        "jsxFactory": "React.createElement",
        "jsxFragmentFactory": "React.Fragment",
        "jsxImportSource": "react",
        "reactNamespace": "React"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "**/*"
    ]
}